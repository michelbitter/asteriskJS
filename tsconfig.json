{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "outDir": "lib",
    "declaration": true,
    "diagnostics": true,
    "alwaysStrict": true,
    "allowJs": false,
    "pretty": true,
    "noEmitOnError": true,
    "rootDir": "src",
    "preserveConstEnums": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "lib"],
  "types": ["node", "mocha", "chai", "@hapi/joi"]
}
